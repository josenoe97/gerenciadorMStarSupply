@model IEnumerable<Product>

<div class="container">

    <div class="d-flex justify-content-between align-content-center mb-5" >
        <h1>Produtos</h1>
        <a class="btn btn-success mx-0" asp-controller="Product" asp-action="Register">Cadastrar novo produto</a>
    </div>

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Preço</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null)
            {

                @foreach (var product in Model)
                {
                    <tr>
                        <th scope="row">@product.Name</th>
                        <td>@product.Amount</td>
                        <td>@product.Price</td>
                        <td>
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning mx-2">Editar</a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger mx-2">Excluir</a>
                        </td>
                    </tr>
                }
            }




        </tbody>
    </table>
</div>